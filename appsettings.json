{
  "Logging": {
    // Configuración del sistema de logging (registro de eventos)
    "LogLevel": {
      // Niveles de detalle para los logs
      "Default": "Information",
      // Nivel de log por defecto. Muestra información general sobre la aplicación.
      "Microsoft.AspNetCore": "Warning"
      // Configuración específica para ASP.NET Core. Solo se mostrarán advertencias y errores.
    }
  },
  "AllowedHosts": "*",
  // Permite que la aplicación se ejecute en cualquier host. 
  // Puede ser configurado para aceptar solo dominios específicos en producción.

  "ConnectionStrings": {
    // Sección donde se definen las cadenas de conexión a bases de datos.
    "DefaultConnection": "server=localhost;database=mi_crud_db;user=root;password=;"
    // Cadena de conexión a MySQL. Define:
    // - Servidor: localhost (base de datos local)
    // - Base de datos: mi_crud_db
    // - Usuario: root
    // - Contraseña: (vacía en este caso, pero debe configurarse en producción para mayor seguridad)
  }
}

