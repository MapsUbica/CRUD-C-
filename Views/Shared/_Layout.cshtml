<!-- Asegúrate de que tu layout base en Views/Shared/_Layout.cshtml tenga Bootstrap -->
<!DOCTYPE html>
<html lang="es">
<head>
    <!-- Definición de la codificación de caracteres -->
    <meta charset="utf-8">
    <!-- Configuración de la vista para dispositivos móviles -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Título dinámico de la página, definido en cada vista -->
    <title>@ViewData["Title"] - MiCrud</title>
    <!-- Importación de Bootstrap 5 desde CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Estilos personalizados -->
    <style>
        /* Establecer un fondo claro y una fuente moderna */
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
        }

        /* Estilos para la barra de navegación */
        .navbar {
            background-color: #343a40 !important;
        }

        .navbar-dark .navbar-nav .nav-link {
            color: #ffffff;
            transition: 0.3s;
        }

            .navbar-dark .navbar-nav .nav-link:hover {
                color: #0dcaf0;
            }

        /* Contenedor principal con ancho máximo */
        .container-custom {
            max-width: 900px;
            margin: auto;
            padding-top: 20px;
        }

        /* Estilos para las tarjetas */
        .card {
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Botón primario con bordes redondeados y transición */
        .btn-primary {
            background-color: #0d6efd;
            border-radius: 8px;
            transition: 0.3s;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }
    </style>
</head>
<body>
    <!-- Barra de navegación con Bootstrap -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <!-- Logo y enlace a la página principal -->
            <a class="navbar-brand" href="/">MiCrud</a>
            <!-- Botón para menú responsive en dispositivos móviles -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Elementos de la barra de navegación -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Categorias">Categorías</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Productos">Productos</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenedor principal donde se renderizará el contenido de cada vista -->
    <div class="container-custom">
        @RenderBody()
    </div>

    <!-- Importación de scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sección opcional de scripts que pueden ser añadidos desde las vistas -->
    @RenderSection("Scripts", required: false) <!-- Agregar esto para evitar errores si no hay scripts adicionales -->
</body>
</html>
