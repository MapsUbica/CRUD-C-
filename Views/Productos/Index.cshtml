@model IEnumerable<MiCrud.Models.Producto>

<h2>Productos</h2>
<a asp-action="Create" class="btn btn-success">Agregar Producto</a>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Tipo</th>
            <th>Stock Disponible</th>
            <th>Categoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Tipo</td>
                <td>@item.StockDisponible</td>
                <td>@(item.Categoria != null ? item.Categoria.Nombre : "Sin categoría")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
