@model MiCrud.Models.Producto

<h2>Editar Producto</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Descripción</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tipo</label>
        <input asp-for="Tipo" class="form-control" />
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Stock Disponible</label>
        <input asp-for="StockDisponible" type="number" class="form-control" />
        <span asp-validation-for="StockDisponible" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Categoría</label>
        <select asp-for="CategoriaId" class="form-control">
            <option value="">Seleccione una categoría</option>
            @foreach (var categoria in ViewBag.Categorias)
            {
                <option value="@categoria.Id">@categoria.Nombre</option>
            }
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

